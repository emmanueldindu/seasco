    <h4 class="head">Update Customer</h4>
    <form action="/updateCustomer/<%= customer._id  %>" method="post">
        <label for="name">Customer Name:</label>
        <input type="text" id="name" name="name" value="<%= customer.name %>"><br><br>
      
        <label for="origin">Origin:</label>
        <input type="text" id="origin" value="<%= customer.origin %>" name="origin"><br><br>
        

        <label for="destination">Destination:</label>
        <input type="text" id="destination" value="<%= customer.destination %>" name="destination"><br><br>


        <label for="date">Date:</label>
        <input type="date" id="date" value="<%= customer.Date ? customer.Date.toDateString() : '' %>" name="date"><br><br>
      
        <label for="current">Current Location:</label>
        <input type="text" id="current" value="<%= customer.current %>"  name="current"><br><br>
      
        <label for="description">Description:</label>
        <textarea id="description" value="<%= customer.description %>"  name="description"></textarea><br><br>
      
        <div class="">
            <button type="submit" >
                update
            </button>
            <a href="/layout">Cancel</a>
        </div>
      </form>
      
