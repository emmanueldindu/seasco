<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/bootstrap.min.css">

    <title>Document</title>
</head>
<body>
    
    <div class="container-fluid">
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-8">
                        <h4 class="font-weight-bold">
                            All Customers
                        </h4>

                        

                        <div class="col-4">
                            <a href="/addCustomer" class="btn btn-success float-right">
                            <i class="fa fa-plus mr-1">Add New Customer</i>    
                            </a>

                          

                        </div>

                       
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                        <thead class="table-dark">
                            <tr>
                                <th scope="col">Shipment ID</th>
                                <th scope="col">Customer Name</th>
                                <th scope="col">Origin</th>
                                <th scope="col">Destination</th>
                           
                                <th scope="col">Delivery Date</th>                            
                                <th scope="col">Current Location</th>
                                <th scope="col">Description</th>
                                <th scope="col">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (customers.length > 0) { %>
                                <% for(let customer of customers) { %>
                                    <tr>
                                        <th scope="row"> <%= customer.id  %></th>
                                        <td><%= customer.name%></td>
                                        <td><%= customer.origin%></td>
                                        <td><%= customer.destination%></td>
                                        
                                        <td><%= customer.Date ? customer.Date.toDateString() : "" %></td>
                                        <td><%= customer.current%></td>
                                        <td><%= customer.description%></td>

                                        <td>
                                           
                                            <a href="/updateCustomer/<%= customer._id  %>" class="btn btn-sm btn-warning">Edit <i class="fa fa-edit"></i></a>
                                            <a href="/deleteCustomer/<%= customer._id  %>" class="btn btn-sm btn-danger"> Delete<i class="fa fa-trash"></i></a>
                                        </td>
                                    </tr>
                                <% } %>
                            <% } else { %>
                                <tr>
                                    <td>No data found</td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>

                    <div class="col-4">
                        <a href="/email" class="btn btn-primary float-right">
                            <i class="fa fa-plus mr-1">Send email</i>    
                            </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    


    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBETGhrnQfc/KdZQ+NumrM4" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.min.js" integrity="sha384-F5BvHOo+YkxzX9Z62etPZoMzQuDg1I8D35+hU6G16fs6vEJWFA8U6XGTZDLJ+Fh3" crossorigin="anonymous"></script>

</body>
</html>